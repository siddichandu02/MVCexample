@model Friend
@{
    ViewData["Title"] = "Insert New Friend";
}

<h1>InsertNewFriend</h1>
<fieldset>
    <form asp-action="Post" asp-controller="Friend">
        <div class="container">

            <div asp-validation-summary="ModelOnly" class="input-validation-error">
            </div>



            <b> <label asp-for="FriendId"></label></b>
            <input type="text" placeholder="Enter Friend ID" name="FriendId">
            <span asp-validation-for="FriendId"></span>
            <br />
            <label for="psw"><b>Friend Name :</b></label>
            <input type="text" placeholder="Enter Name" name="FriendName">
            <br />
            <label for="psw-repeat"><b>Place :</b></label>
            <input type="text" placeholder="Enter Place Name" name="Place" required>
            <br />


            <button type="submit" class="registerbtn">Submit</button>


        </div>


    </form>
</fieldset>

